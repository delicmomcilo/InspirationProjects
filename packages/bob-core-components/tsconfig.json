{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "declarationMap": true,
//    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
//    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
//    "composite": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    //      "declaration": true,
    //   "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "outDir": "build",
    //    "noEmit": true,
    "jsx": "react"
  },
  "include": ["src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".storybook",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "build"
  ]
}